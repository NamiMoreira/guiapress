
<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/homeNavbar.ejs') %>

    <hr>
    <div class="container">
        <hr>

         <% result.articles.rows.forEach( articles => { %>  
                <div class="card-header">
                    <h2> <%- articles.title %> </h2>
                </div>
                <div class="card-body">
                    <a href="/<%- articles.slug %>" class="btn btn-success"> Ler artigo </a>
                </div>
         <%  }) %>
        
         <hr>
         <div class="row">
            <div class="col col-12">
                <% if(result.page > 2){ %>
                    <a style="float: left;" href="/articles/page/<%= result.page - 1 %>"> <<< Prev  </a>

                <% }else{ if(result.page == 2){ %>
                    <a style="float: right;" href="/home">Home </a>
                    <a style="float: left;" href="/articles/page/<%= result.page - 1 %>"> <<< Prev  </a>
                <% }} %>

                  


                <% if(result.next){ %>
                    <a style="float: right;" href="/articles/page/<%= result.page + 1 %>">Next >>> </a>

                <% }else{ %>

                <% } %>
                
            </div>
         </div>
    </div>

