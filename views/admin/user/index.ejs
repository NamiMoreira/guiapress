 function confirmDelection(event, form) {
    var decision = confirm("Você deseja deletar essa categoria?")
    if (decision) {
        form.submit()
        alert("Formulário deletado")
    }else{
        event.preventDefault()
        alert("Formulário não foi deletado.")
    }
 }
</script>